{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",           // ✅ This tells TypeScript to emit compiled JS files to `dist/`
    "rootDir": "./src",           // ✅ This tells it to look for TS source files in `src/`
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
